<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="left|center_vertical"
  >

  <!-- Boo thumbnail -->
  <ImageView android:id="@+id/browse_boos_item_image"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_margin="2dp"
      android:layout_alignParentTop="true"
      android:layout_alignParentLeft="true"
      android:src="@drawable/anonymous_boo"
      android:padding="1dp"
      android:background="@color/browse_boos_image_background"
    />

  <!-- Metadata -->
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_alignParentLeft="true"
      android:layout_marginRight="10dp"
      android:layout_marginLeft="70dp"
      android:layout_marginTop="5dp"
      android:orientation="vertical"
    >

    <!-- Author -->
    <TextView android:id="@+id/browse_boos_item_author"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/browse_boos_item_author"
        android:textColor="@color/browse_boos_author"
        android:textStyle="bold"
        android:ellipsize="end"
        android:lines="1"
        android:singleLine="true"
        android:text="@string/browse_boos_anonymous_author"
      />

    <!-- Title -->
    <TextView android:id="@+id/browse_boos_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/browse_boos_item_title"
        android:textColor="@color/browse_boos_title"
        android:ellipsize="end"
        android:lines="1"
        android:singleLine="true"
      />

    <!-- Location -->
    <TextView android:id="@+id/browse_boos_item_location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/browse_boos_item_location"
        android:textColor="@color/browse_boos_location"
        android:textStyle="bold"
        android:ellipsize="end"
        android:lines="1"
        android:singleLine="true"
      />

  </LinearLayout>
</RelativeLayout>
