<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  >
  <!-- List view -->
  <ListView android:id="@android:id/list"
      android:orientation="vertical"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_marginTop="3dp"
      android:divider="@android:color/transparent"
      android:dividerHeight="0dp"
    />

  <!-- Empty list view -->
  <LinearLayout android:id="@+id/recent_boos_empty"
      android:orientation="vertical"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:gravity="center"
    >

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="10000"
        style="android:progressBarStyleSmall"
      />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/logotype"
      />
  </LinearLayout>

  <!-- Player view -->
  <LinearLayout android:id="@+id/recent_boos_player"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:orientation="vertical"
      android:background="#cc222222"
      android:visibility="invisible"
    > <!-- FIXME background color -->
    <!-- Separator -->
    <ImageView
        android:src="@android:drawable/divider_horizontal_dark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
      />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
      >
      <!-- Play/pause button -->
      <fm.audioboo.widget.PlayPauseButton android:id="@+id/recent_boost_play_pause_button"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:layout_margin="2dp"
        />

      <!-- Volume bar -->
      <SeekBar android:id="@+id/recent_boos_volume"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginRight="15dp"
        />
    </LinearLayout>
  </LinearLayout>
</RelativeLayout>
