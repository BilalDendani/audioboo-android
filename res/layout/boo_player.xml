<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/boo_player_background"
  >
  <!-- Separator -->
  <ImageView
      android:src="@android:drawable/divider_horizontal_dark"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:scaleType="fitXY"
    />

  <!-- Title -->
  <TextView android:id="@+id/boo_player_title"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="2dp"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:textSize="@dimen/boo_player_title"
      android:textStyle="bold"
      android:textColor="@color/boo_player_title"
      android:ellipsize="end"
      android:lines="1"
      android:singleLine="true"
    />

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
    >
    <!-- Play/pause button -->
    <fm.audioboo.widget.PlayPauseButton android:id="@+id/boo_player_button"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_margin="5dp"
      />

    <!-- Volume bar -->
    <SeekBar android:id="@+id/boo_player_volume"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
      />
  </LinearLayout>
</LinearLayout>
